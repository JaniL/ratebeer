<p id="notice"><%= notice %></p>

<h1>Listing Beers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= link_to 'Name', controller: 'beers', order: 'name' %></th>
      <th><%= link_to 'Style', controller: 'beers', order: 'style' %></th>
      <th><%= link_to 'Brewery', controller: 'beers', order: 'brewery' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= beer.style %></td>
        <td><%= link_to beer.brewery.name, beer.brewery %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beer', new_beer_path, class:'btn btn-primary' if current_user %>
<%= link_to 'list of breweries', breweries_path, class:'btn btn-primary' %>
