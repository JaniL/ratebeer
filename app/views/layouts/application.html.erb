<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="navibar">
      <%= link_to 'breweries', breweries_path %>
      <%= link_to 'beers', beers_path %>
      <%= link_to 'users', users_path %>
      <%= link_to 'places', places_path %>

      <% if not current_user.nil? %>
        <%= link_to 'ratings', ratings_path %>
          <%= link_to 'join a club', beer_clubs_path %>
      <% end %>

      |


      <% if current_user.nil? %>

        <%= link_to 'login', signin_path %>
      <%= link_to 'signup', signup_path %>
      <% else %>
        logged in now: <%= current_user.username %>
          <%= link_to 'logout', signout_path, method: :delete %>
      <% end %>
    </div>

    <% if session[:last_rating].nil? %>
    <p>no ratings given</p>
<% else %>
    <p>previous rating: <%= session[:last_rating] %></p>
<% end %>

<%= yield %>

</body>
</html>
