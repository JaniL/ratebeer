<table class="table table-hover">
  <thead>
  <tr>
    <th>
      <% if @order == 'name' %>
          <%= link_to 'Name', controller: 'breweries', order: 'rname' %>

      <% else %>
          <%= link_to 'Name', controller: 'breweries', order: 'name' %>
      <% end %>

    </th>
    <th>
      <% if @order == 'year' %>
      <%= link_to 'Year', controller: 'breweries', order: 'ryear' %>
      <% else %>
          <%= link_to 'Year', controller: 'breweries', order: 'year' %>
      <% end %>
    </th>
  </tr>
  </thead>

  <tbody>
  <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <td></td>
      </tr>
  <% end %>
  </tbody>
</table>