<p id="notice"><%= notice %></p>

<h1>Listing Beer Clubs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Founded</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beer_clubs.each do |beer_club| %>
      <tr>
        <td><%= beer_club.name %></td>
        <td><%= beer_club.founded %></td>
        <td><%= beer_club.city %></td>
        <% if not current_user.nil? %>
            <% if beer_club.members.include? current_user %>
                <td><%= link_to 'Leave', leave_beer_club_path(beer_club), method: :patch %></td>
            <% else %>
                <td><%= link_to 'Join', join_beer_club_path(beer_club), method: :patch %></td>
            <% end %>
        <% end %>
        <td><%= link_to 'Show', beer_club %></td>
        <td><%= link_to 'Edit', edit_beer_club_path(beer_club) %></td>
        <td><%= link_to 'Destroy', beer_club, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

